<!DOCTYPE html>
<html>
  <head>
    <title>Guelph</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'bootstrap.min.css', 'bootstrap.techie.css' %>
    <%= javascript_include_tag 'application' %>

    <style>
      body,
      html {
        overflow-x: hidden
      }

      /*body {
        padding: 60px 20px 0
      }*/

      footer {
        border-top: 1px solid #ddd;
        padding: 30px;
        margin-top: 50px
      }

      .row>[class*=col-] {
        margin-bottom: 40px
      }

      .navbar-container {
        position: relative;
        min-height: 100px
      }

      .navbar.navbar-fixed-bottom,
      .navbar.navbar-fixed-top {
        position: absolute;
        top: 50px;
        z-index: 0
      }

      .navbar.navbar-fixed-bottom .container,
      .navbar.navbar-fixed-top .container {
        max-width: 90%
      }

      .btn-group {
        margin-bottom: 10px
      }

      .form-inline input[type=password],
      .form-inline input[type=text],
      .form-inline select {
        width: 180px
      }

      .input-group {
        margin-bottom: 10px
      }

      .pagination {
        margin-top: 0
      }

      .navbar-inverse {
        margin: 110px 0
      }

      .form-group.required .control-label:after {
        content:"*";
        color:red;
      }
    </style>
  </head>

  <body>
	  <div class="container">
		  <div class='row'>
		  	<div class='col-sm-12 col-lg-12'>
		  	<h1>Guelph Sikh Society</h1>
		  	</div>
		  </div>
		  <div class="row">
		  	<div class="col-sm-12 col-lg-12">
		  		<% if admin_signed_in? %>
		  			<% link_to('Edit registration ', edit_admin_registration_path, class: 'pull-right')%>
		  		  <%= link_to(' Logout', destroy_admin_session_path, method: :delete, class: 'pull-right') %>    
		  		 <% else %>
		  		   <%= link_to('Login as Admin', new_admin_session_path, class: 'pull-right')  %>
		  		<% end %>
		  	</div>
		  </div>
		  <div class='row'>
		  	<div class="col-sm-12 col-lg-12">
		      <div class="row">
		        <div class="col-sm-4 col-lg-4">
		          <ul class="nav nav-tabs nav-stacked">
		            <li class="<%= 'active' if controller_name == 'dashboard' %>"><%= link_to 'Dashboard', '/dashboard/index' %></li>
		            <li class="<%= 'active' if controller_name == 'contacts' %>"><%= link_to 'Contacts', contacts_path %></li>
		            <li class="<%= 'active' if controller_name == 'donations' %>"><%= link_to 'Donations', donations_path %></li>
		            <li class="<%= 'active' if controller_name == 'reports' %>"><%= link_to 'Reports', '/reports/index' %></li>
		          </ul>
		        </div>
		        <div class="col-sm-8 col-lg-8">
		        	<div class="row well">
		        		<%= yield %>
		        	</div>
		        </div>
		      </div>
		    </div>
		  </div>
		</div>
  </body>
</html>
